.accordion {
  max-width: calc(100vw - 24px);
  width: 100%;
  border: 1px solid rgba(25, 101, 233, 0.5);
  margin: 8px 0;
  position: relative;
  border-radius: 50px;
  background-color: #ffffff;
  padding: 30px 42px;
}

.accordionHaveDeposit {
  @extend .accordion;
  border: 1px solid #00C9A7;
}

.assetRow {
  flex: available;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
}

.assetIcon {
  width: 40px;
  height: 40px;
  margin-right: 24px;
}

.assetName {
  width: 150px;
  display: flex;
  align-items: center;
  margin-right: 24px;
}

.totalRewards {
  width: 200px;
  margin-right: 24px;
}

.apy {
  width: 300px;
  margin-right: 24px;
}

.availableDeposit {
  display: block;
  flex: auto;
  margin-right: 24px;
}

.content2 {
  flex: 1;
  display: flex;
  padding: 0 24px 30px 24px;
  margin: 0;
}

.changeBalance {
  flex: 1;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: flex-end;
  margin: 0;
}

.claimBox {
  display: flex;
  justify-content: center;
}

.balanceRow {
  width: 100%;
  text-align: right;
  padding-right: 20px;
  overflow: hidden;
}

.balanceInput {
  width: 100%;
  padding: 0px 0px 12px 0px;
  display: flex;
  // transition box-shadow 300ms cubic-bezier(0.4, 0, 0.2, 1) 0ms
}

.form {
  position: relative;
  padding-bottom: 12px;
  width: 100%;
  color: #212529;
  // transition box-shadow 300ms cubic-bezier(0.4, 0, 0.2, 1) 0ms
}

.h4 {
  font-size: 16px;
  font-family: 'Work Sans Thin', BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol';
  font-weight: 600;
  line-height: 1.2;
  -webkit-font-smoothing: antialiased;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  float: right;
}

.h3 {
  padding-right: 24px;
}

.amountRow {
  min-width: 10px;
  padding-bottom: 1rem;
}

.button {
  border-radius: 15px;
  height: 32px;
  font-weight: 400;
  // width 100%
  color: #2F80ED;
  white-space: nowrap;
  background-color: transparent;
  -webkit-font-smoothing: antialiased;
  -webkit-tap-highlight-color: transparent;
  // border 1px solid rgba(47, 128, 237, 0.5)
  box-shadow: 0 0 0.2rem rgba(0, 0, 0, 0.3);
  cursor: pointer;
  transition: all 0.8s ease;
  outline: none;
  padding: 0 1.5em !important;
  margin-top: 0.3em !important;

  &:hover {
    background-color: rgba(47, 128, 237, 0.2);
  }

  &:disabled {
    color: #848484;
    // border 1px solid #848484
    background-color: transparent;
    cursor: default;
  }
}

.amountButton {
  border-radius: 15px;
  transition: all 0.8s ease;

  &:hover {
    background-color: rgba(47, 128, 237, 0.2);
  }
}

.subtitle {
  font-size: 16px;
  font-family: 'Work Sans Thin', BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol';
  font-weight: 500;
  line-height: 1.2;
  -webkit-font-smoothing: antialiased;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  float: left;
  color: rgba(43, 57, 84, 0.5);
  margin-left: 5%;
}
